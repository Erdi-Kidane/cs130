    <ImageView
        android:id="@+id/roulette"
        android:layout_width="263dp"
        android:layout_height="390dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/spin3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageSelected"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <LinearLayout
        android:id="@+id/foodPlaceImage3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/foodplace3"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/firstLine"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFF200"
            android:textSize="16sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/secondLine"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="1dp"
            android:maxLines="2"
            android:textColor="#FF7F27"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdLine"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="1dp"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fourthLine"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="1dp"
            android:maxLines="2"
            android:textColor="#E603EB"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fifthLine"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:textColor="#180DFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sixthLine"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:textColor="#7F7F7F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seventhLine"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textColor="#ED1C24"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eighthLine"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textColor="#2BD200"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/foodPlaceImage2"
        android:layout_width="200dp"
        android:layout_height="100dp"

        android:background="@drawable/foodplace2"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:textStyle="bold"
            android:textColor="#2BD200"
            android:id="@+id/firstLine2"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:textSize="16sp"

            />

        <TextView
            android:textStyle="bold"
            android:textColor="#180DFF"
            android:id="@+id/secondLine2"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="11dp"
            android:maxLines="2"
            android:textSize="16sp" />

        <TextView
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:id="@+id/thirdLine2"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="11dp"
            android:maxLines="2"
            android:textSize="16sp" />

        <TextView
            android:textStyle="bold"
            android:textColor="#ED1C24"
            android:id="@+id/fourthLine2"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="11dp"
            android:maxLines="2"
            android:textSize="16sp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/foodPlaceImage1"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:background="@drawable/foodplace1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:id="@+id/firstLine1"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="11dp"
            android:gravity="center_vertical"
            android:textSize="16sp"

            />

        <TextView
            android:textStyle="bold"
            android:textColor="#ED1C24"
            android:id="@+id/secondLine1"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="11dp"
            android:maxLines="2"
            android:textSize="16sp" />




    </LinearLayout>

    <Button
        android:id="@+id/spinItBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="onClickButtonRotation"
        android:text="SpinIt!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/subtractBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonMinus"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addStuffBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonPlus"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/subtractBTN"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

